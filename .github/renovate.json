{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["github>terminal-nerds/.github//.github/renovate"],
	"packageRules": [
		{
			"groupName": "configs",
			"addLabels": ["⚙️ configuration"],
			"matchUpdateTypes": ["major", "minor", "patch", "rollback"],
			"packagePatterns": [
				"@terminal-nerds/*-config",
				"browserslist",
				"depcheck",
				"eslint",
				"husky",
				"lint-staged",
				"markdownlint-cli",
				"prettier",
				"pretty-quick",
				"syncpack",
				"tsup",
				"typescript",
				"vitest"
			]
		},
		{
			"groupName": "tools",
			"addLabels": ["🧰 project"],
			"matchUpdateTypes": ["major", "minor", "patch", "rollback"],
			"packagePatterns": [
				"@changesets/*",
				"all-contributors-cli",
				"concurrently",
				"del-cli",
				"husky",
				"turbo",
				"tsx"
			]
		},
		{
			"groupName": "types",
			"addLabels": ["🧰 project"],
			"matchUpdateTypes": ["major", "minor", "patch", "rollback"],
			"packagePatterns": ["@total-typescript/ts-reset", "@types/node", "bun-types"]
		},
		{
			"groupName": "project prerequisities",
			"addLabels": ["🧰 project"],
			"matchUpdateTypes": ["major", "minor", "patch", "rollback"],
			"packagePatterns": ["node", "pnpm"]
		},
		{
			"groupName": "package(s) dependencies",
			"addLabels": ["📦 packages"],
			"matchDepTypes": ["dependencies"],
            "matchPaths": ["packages/**/package.json"],
			"matchUpdateTypes": ["major", "minor", "patch", "rollback"]
		}
	]
}
